{
  "name": "@travi/spectacle-scaffolder",
  "description": "scaffolder for presentations using Spectacle",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "engines": {
    "node": "^16.14 || >=18"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "travi/spectacle-scaffolder",
  "bugs": "https://github.com/travi/spectacle-scaffolder/issues",
  "homepage": "https://npm.im/@travi/spectacle-scaffolder",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.js"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha 'src/**/*-test.js'",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@form8ion/cypress-scaffolder": "3.0.2",
    "make-dir": "^4.0.0"
  },
  "devDependencies": {
    "@babel/register": "7.25.9",
    "@form8ion/javascript": "11.5.2",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@travi/any": "3.1.2",
    "@travi/babel-preset": "3.0.135",
    "@travi/eslint-config": "4.0.5",
    "@travi/eslint-config-mocha": "1.0.25",
    "@form8ion/javascript": "13.0.2",
    "ban-sensitive-files": "1.10.6",
    "c8": "10.1.2",
    "chai": "4.5.0",
    "commitlint-config-travi": "1.4.53",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "ls-engines": "0.9.3",
    "mocha": "11.0.1",
    "npm-run-all2": "7.0.1",
    "publint": "0.2.12",
    "remark-cli": "12.0.1",
    "remark-preset-lint-travi": "6.0.6",
    "rimraf": "6.0.1",
    "rollup": "4.28.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "19.0.2"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
