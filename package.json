{
  "name": "@travi/spectacle-scaffolder",
  "description": "scaffolder for presentations using Spectacle",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/spectacle-scaffolder",
  "bugs": "https://github.com/travi/spectacle-scaffolder/issues",
  "homepage": "https://npm.im/@travi/spectacle-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha 'src/**/*-test.js'",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "engines": {
    "node": ">=12.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/register": "7.21.0",
    "@rollup/plugin-node-resolve": "15.0.2",
    "@travi/any": "2.1.8",
    "@travi/babel-preset": "3.0.99",
    "@travi/eslint-config": "3.0.30",
    "@travi/eslint-config-mocha": "1.0.19",
    "@form8ion/javascript": "10.6.3",
    "ban-sensitive-files": "1.9.19",
    "chai": "4.3.7",
    "codecov": "3.8.3",
    "commitlint-config-travi": "1.4.30",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "11.0.0",
    "remark-preset-lint-travi": "5.0.1",
    "rimraf": "5.0.0",
    "rollup": "3.21.6",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "15.0.4"
  },
  "dependencies": {
    "@form8ion/cypress-scaffolder": "3.0.0",
    "make-dir": "^3.0.0",
    "mz": "^2.7.0"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
